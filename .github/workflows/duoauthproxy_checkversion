name: duoauthproxy - check_for_new_version

on:
  schedule:
    - cron: "0 0 * * *"

jobs:
  check-version:
    runs-on: [self-hosted, X64]
    steps:
      - name: Check for New Version
        id: check_version
        run: |
          latest_version=$(curl -s -I -L "https://dl.duosecurity.com/duoauthproxy-latest-src.tgz" | grep -i "content-disposition" | awk -F'filename="' '{print $2}' | awk -F'"' '{print $1}' | awk -F'-' '{print $2}')
          
          # Retrieve the stored version
          previous_version=${{ env.PREVIOUS_VERSION }}
          latest_version=${{ env.LATEST_VERSION }}

          if [ "$latest_version" != "$previous_version" ]; then
            echo "New version found: $latest_version"
            echo "::set-output name=new_version::true"
            echo "::set-env name=PREVIOUS_VERSION::$previous_version"
            echo "::set-env name=LATEST_VERSION::$latest_version"
            exit 0 # Exit with success
          else
            echo "No new version found."
            exit 78 # Custom exit code indicating neutral status
          fi
